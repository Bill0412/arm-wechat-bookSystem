/* pages/home/home.wxss */

.unlogin-card{
  margin-top: 80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  display: flex;
  background-color: #ddd;
  border-radius: 20rpx;
  height: 200rpx;
}

.unlogin-info{
  margin-left: 30rpx;
  margin-bottom: 50rpx;
  background-color: #ddd;
  border-radius: 20rpx;
}

.unlogin-head, .user-head{
  margin-top: 25rpx;
  margin-left: 25rpx;
  width: 150rpx;
  height: 150rpx;
  background-color: yellow;
  border-radius: 100rpx;
  position: relative;
}

/* 200 = */
.unlogin-text{
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  font-size: 60rpx;
  text-align: left;
  position: relative;
}

.unlogin-btn{
  margin-top: 50rpx;
  margin-left: 250rpx;
  margin-right: 250rpx;
  font-size: 40rpx;
  color: #555;
  height: 100rpx;
  text-align: center;
  border-radius: 25rpx;
}

.option{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.option:last-child{
  border-bottom: none;
}

.user-options, .user-info{
  background-color: #eee;
  margin-right: 40rpx;
  margin-left: 40rpx;
  border-radius: 20rpx;
}


.user-card{
  margin-top: 80rpx;
}

.user-info{
  display: flex;
  margin-bottom: 50rpx;
  height: 200rpx;
}

/* 200 = 50 + 50 + 100 */
.user-name{
  position: relative;
  margin-top: 50rpx;
  margin-left: 40rpx;
  font-size: 50rpx;
}

